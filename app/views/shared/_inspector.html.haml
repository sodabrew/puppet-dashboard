%table.inspector
  - if options[:caption]
    %caption= h options[:caption]
  %thead
    %tr
      %th.key= h (options[:key_title] || key).to_s.titleize
      - unless options[:key_only]
        %th.value{:colspan => 2}= h (options[:value_title] || value).to_s.titleize
  %tbody
    - inspector.each do |key, value|
      %tr
        %td.key= h key
        - unless options[:key_only]
          %td{:colspan => 2}= h value
